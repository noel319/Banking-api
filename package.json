{
  "name": "banking-api",
  "version": "1.0.0",
  "description": "A simple banking API for handling user balance updates",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --runInBand",
    "lint": "eslint .",
    "migrate": "node -e \"require('./src/utils/migrator').migrate()\"",
    "seed": "node -e \"require('./src/utils/migrator').seed()\"",
    "start:notification-worker": "node src/workers/notificationWorker.js",
    "start:audit-worker": "node src/workers/auditWorker.js"
  },
  "dependencies": {
    "amqplib": "^0.10.3",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "pino": "^8.16.2",
    "pino-http": "^8.5.1",
    "sequelize": "^6.35.1",
    "umzug": "^3.4.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "pino-pretty": "^10.2.3",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testTimeout": 30000
  }
}